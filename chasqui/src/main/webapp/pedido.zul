<?page title="CHASQUI-WEB" contentType="text/html;charset=UTF-8"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" arg0="./pedidoWindow" ?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?link rel="icon" type="image/x-icon" href="/imagenes/favicon.ico"?>
<zk>
<window title="Detalle Del Pedido" border="normal" id="pedidoWindow" closable="true" 
apply="ar.edu.unq.chasqui.view.composer.ProductosEnPedidoComposer" width="50%">


<listbox model="@{pedidoWindow$composer.pedidos}" mold="paging" pageSize="10" >
	<listhead>
		<listheader label="Usuario" hflex="1" align="center"/>
		<listheader label="Nombre del Producto" hflex="1" align="center"/>
		<listheader label="Variante" hflex="1" align="center"/>
		<listheader label="Cantidad" hflex="1" align="center"/>
		<listheader label="Precio por unidad" hflex="1" align="center"/>
	</listhead>
	<listitem self="@{each=pedido}" >
		<listcell label="@{pedido.getUsuario}"/>
		<listcell label="@{pedido.getNombreProducto}"/>
		<listcell label="@{pedido.getNombreVariante}"/>
		<listcell label="@{pedido.getCantidad}"/>
		<listcell label="@{pedido.getPrecio}"/>
	</listitem>
	<listfoot>
		<listfooter label="Total:" align="left" hflex="1"/>
		<listfooter hflex="1"/>
		<listfooter hflex="1"/>
		<listfooter hflex="1"/>
		<listfooter label="@{pedidoWindow$composer.total}" align="right" hflex="1"/>		
	</listfoot>
</listbox>

<separator spacing="30px"/>
<grid width="100%">
	<auxhead>
		<auxheader label="Detalles de la direcciÃ³n de entrega"  align="center" colspan="2"/>
	</auxhead>
	<columns>
		<column width="20%" zclass="none"/>
		<column width="80%" zclass="none"/>
	</columns>
	<rows>
		<row>
			<cell>
				<label value="Calle:"/>
			</cell>
			<cell>
				<label id="callelbl"/>
			</cell>
		</row>
		<row>
			<cell>
				<label value="Altura:"/>
			</cell>
			<cell>
				<label id="alturalbl"/>
			</cell>
		</row>
		<row>
			<cell>
				<label value="Codigo Postal:"/>
			</cell>
			<cell>
				<label id="postallbl"/>
			</cell>
		</row>
		<row>
			<cell>
				<label value="Departamento:"/>
			</cell>
			<cell>
				<label id="departamentolbl"/>
			</cell>
		</row>
		<row>
			<cell>
				<label value="Localidad:"/>
			</cell>
			<cell>
				<label id="localidadlbl"/>
			</cell>
		</row>
	</rows>
</grid>

</window>
</zk>